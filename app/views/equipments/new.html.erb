<h2>Add new equipment</h2>

<%= form_for @equipment, url: {action: "create"} do |f| %>
    <p>
        <%= f.label :name %> <br/>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :description %> <br/>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to  "Back", root_path %>